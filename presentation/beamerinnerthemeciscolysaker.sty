    \hbox{%
      \begin{beamercolorbox}[wd=.85\paperwidth,ht=2.25ex,dp=1ex,left]{date in head/foot}%
          \usebeamerfont{date in head/foot}%
          \hspace*{3em}%
          \ifnum \insertpagenumber=1
            % \hbox{Â© 2020 Cisco Systems, Inc. All rights reserved.}%
          \else
            \insertframenumber{}\hspace*{2em}\hspace*{1em}/\hspace*{1em}\insertframetitle
          \fi
      \end{beamercolorbox}%
    }%
    \vskip3em%
}%
\makeatother

