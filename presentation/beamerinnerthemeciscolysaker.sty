\mode<presentation>

\usepackage{textpos}

% Title page
\defbeamertemplate*{title page}{texsx}[1][]
{ 
    % The "plus 1filll" part ensures that long titles and subtitles extend
    % upwards instead of pushing the rest of the text down
    \vskip0pt plus 1filll%
    \begin{beamercolorbox}[wd=.85\paperwidth,leftskip=-.5cm,#1]{title page header}
        \usebeamerfont{title}\inserttitle\par%
    \end{beamercolorbox}%
    \vskip0.3cm%
    \begin{beamercolorbox}[wd=.85\paperwidth,leftskip=-.5cm,#1]{title page header}
        \usebeamerfont{subtitle}\insertsubtitle\par%
    \end{beamercolorbox}%
    \vskip0.8cm%
    \begin{beamercolorbox}[wd=.85\paperwidth,leftskip=-.5cm,#1]{author}
        \usebeamerfont{author}\insertauthor\par%
    \end{beamercolorbox}
    \vskip0.2cm%
    \begin{beamercolorbox}[wd=.85\paperwidth,leftskip=-.5cm,#1]{date}
        \usebeamerfont{author}\insertdate\par%
    \end{beamercolorbox}
    \vskip0.5cm%
}

\makeatletter
\def\ps@navigation@titlepage{%
  \setbeamercolor{background canvas}{bg=Blue}
  \@nameuse{ps@navigation}}

\addtobeamertemplate{title page}{\thispagestyle{navigation@titlepage}}{}
\makeatother

